{
  "identifier": "desktop-capability",
  "platforms": [
    "macOS",
    "windows",
    "linux"
  ],
  "windows": [
    "main"
  ],
  "permissions": [
    "cli:default",
    "fs:default",
    "log:default",
    "core:path:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPCACHE/*"
        },
        {
          "path": "$APPLOG/*"
        }
      ]
    }
  ]
}